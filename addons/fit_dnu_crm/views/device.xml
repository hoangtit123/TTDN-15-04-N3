<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>s
        <record id="view_device_form" model="ir.ui.view">
            <field name="name">device</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class = "oe-_title">
                            <label for="name"></label>
                            <h1>
                                <field name="display_name"></field>
                            </h1>
                        </div>
                        <group>
                            <field name="device_code"></field>
                            <field name="device_code"></field>
                            <field name="quantity"></field>
                        </group>
                        
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_semester_tree" model="ir.ui.view">
            <field name="name">semester</field>
            <field name="model">semester</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="display_name"/>
                    <field name="current_semester"/>
                </tree>
            </field>
        </record>

        <record id="action_semester" model="ir.actions.act_window">
            <field name="name">Kỳ học</field>
            <field name="res_model">semester</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>